{
  "id": "10352",
  "key": "GG-349",
  "fields": {
    "summary": "Documentation - CredJira for attachments",
    "description": {
      "type": "doc",
      "version": 1,
      "content": [
        {
          "type": "heading",
          "attrs": {
            "level": 3
          },
          "content": [
            {
              "type": "text",
              "text": "Use case:",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "As a user of the React JS Front End,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "I want to retrieve and document how attachments are linked to Jira issues,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "so that I can ensure proper handling and downloading of files."
            }
          ]
        },
        {
          "type": "heading",
          "attrs": {
            "level": 3
          },
          "content": [
            {
              "type": "text",
              "text": "Acceptance criteria:",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "GIVEN",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": " I have access to the React JS Front End,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "WHEN",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": " I fetch an issue from Jira Cloudâ€™s REST API,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "AND",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": " the issue contains attachments,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "THEN",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": " the response should include metadata for each attachment,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "AND",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": " I should be able to document how the attachment can be accessed and downloaded."
            }
          ]
        },
        {
          "type": "heading",
          "attrs": {
            "level": 3
          },
          "content": [
            {
              "type": "text",
              "text": "Technical notes:",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            }
          ]
        },
        {
          "type": "bulletList",
          "content": [
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Every attachment in Jira is linked to a specific issue."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "When an issue is retrieved, its attachments are included in the response."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Attachments appear both in the "
                    },
                    {
                      "type": "text",
                      "text": "description",
                      "marks": [
                        {
                          "type": "strong"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " field (as media references) and in the "
                    },
                    {
                      "type": "text",
                      "text": "attachments array",
                      "marks": [
                        {
                          "type": "strong"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": "."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "The attachments array contains critical metadata such as:"
                    }
                  ]
                },
                {
                  "type": "bulletList",
                  "content": [
                    {
                      "type": "listItem",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "text",
                              "text": "Filename",
                              "marks": [
                                {
                                  "type": "strong"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (name of the file)"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "listItem",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "text",
                              "text": "Author",
                              "marks": [
                                {
                                  "type": "strong"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (name and email of the uploader)"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "listItem",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "text",
                              "text": "Creation date",
                              "marks": [
                                {
                                  "type": "strong"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (timestamp of when the file was uploaded)"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "listItem",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "text",
                              "text": "Size",
                              "marks": [
                                {
                                  "type": "strong"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (file size in bytes)"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "listItem",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "text",
                              "text": "MIME type",
                              "marks": [
                                {
                                  "type": "strong"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (file type, e.g., text/plain, application/json)"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "listItem",
                      "content": [
                        {
                          "type": "paragraph",
                          "content": [
                            {
                              "type": "text",
                              "text": "Download URL",
                              "marks": [
                                {
                                  "type": "strong"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (direct link to retrieve the file)"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "To download an attachment, a request must be made to the provided "
                    },
                    {
                      "type": "text",
                      "text": "content URL",
                      "marks": [
                        {
                          "type": "strong"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " using valid Jira credentials."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "API testing tools like "
                    },
                    {
                      "type": "text",
                      "text": "Postman, Bruno, or Thunder Client",
                      "marks": [
                        {
                          "type": "strong"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " can be used to verify the attachment retrieval and download process."
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
