{
  "id": "10083",
  "key": "GG-80",
  "fields": {
    "summary": "Create Audit Logs for Jira Cloud Credentials Access and Usage",
    "description": {
      "type": "doc",
      "version": 1,
      "content": [
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Use case:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "As a "
            },
            {
              "type": "text",
              "text": "compliance manager",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "I want to "
            },
            {
              "type": "text",
              "text": "create audit logs for Jira Cloud credentials access and usage",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "so that "
            },
            {
              "type": "text",
              "text": "I can track and monitor who accessed the credentials and how they were used",
              "marks": [
                {
                  "type": "strong"
                }
              ]
            },
            {
              "type": "text",
              "text": "."
            }
          ]
        },
        {
          "type": "rule"
        },
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Acceptance criteria:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "GIVEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " a Jira Cloud credentials access and usage event,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "WHEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " a user accesses or uses the credentials,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "AND",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " the type of access or usage is logged,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "THEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " an audit log entry is created with timestamp, user ID, type of access, and details of the action performed."
            }
          ]
        },
        {
          "type": "rule"
        },
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Technical notes:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "The audit logs should be stored securely and accessible only to authorized personnel. Each log entry should contain detailed information about the access or usage, including source IP, action performed, and any relevant contextual details. The logs must be tamper-proof and comply with industry-standard security practices."
            }
          ]
        }
      ]
    },
