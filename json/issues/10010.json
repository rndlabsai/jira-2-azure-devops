{
  "id": "10010",
  "key": "GG-7",
  "fields": {
    "summary": "Develop Node JS Service to Interact with Jira Cloud REST API",
    "description": {
      "type": "doc",
      "version": 1,
      "content": [
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Use case:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "As a "
            },
            {
              "type": "text",
              "text": "member of Team Gamma",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "I want to "
            },
            {
              "type": "text",
              "text": "develop a Node JS service",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " to interact with Jira Cloud REST API,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "so that "
            },
            {
              "type": "text",
              "text": "we can fetch Jira issues, screens, and custom fields for a specific project, transform and export them into a simple structured JSON format.",
              "marks": [
                {
                  "type": "em"
                }
              ]
            }
          ]
        },
        {
          "type": "rule"
        },
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Acceptance criteria:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "GIVEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " the Jira Cloud credentials and project key or ID are collected,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "WHEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " the Node JS service integrates with Jira Cloud’s REST API to fetch all necessary data (except Zephyr test data),"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "AND",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " the fetched data is transformed into well-structured JSON schemas,"
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "THEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " the Node JS service should securely store or cache results before final export."
            }
          ]
        },
        {
          "type": "rule"
        },
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Technical notes:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "The Node JS service should:"
            }
          ]
        },
        {
          "type": "bulletList",
          "content": [
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Integrate with Jira Cloud’s REST API to fetch issues of all types (epics, stories, tasks, bugs, sub-tasks)."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Fetch screens, and custom fields from Jira Cloud."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Exclude any Zephyr for Jira Cloud data."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Maintain hierarchical relationships such as epics → child issues."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Organize data into well-structured JSON schemas that are clearly documented and extendable."
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "Securely store or cache results before final export in a database or file storage."
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
