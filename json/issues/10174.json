{
  "id": "10174",
  "key": "GG-171",
  "fields": {
    "summary": "Feature: Implement Comment History Tracking in New System",
    "description": {
      "type": "doc",
      "version": 1,
      "content": [
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Use case:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "As a "
            },
            {
              "type": "text",
              "text": "user",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": ", "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "I want to",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " implement comment history tracking in the new system, "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "so that",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " I can keep track of all comments associated with Jira issues during the migration process."
            }
          ]
        },
        {
          "type": "rule"
        },
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Acceptance criteria:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "GIVEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " the migration process is ongoing, "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "WHEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " I access the new system, "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "AND",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " navigate to a specific Jira issue, "
            },
            {
              "type": "hardBreak"
            },
            {
              "type": "text",
              "text": "THEN",
              "marks": [
                {
                  "type": "em"
                }
              ]
            },
            {
              "type": "text",
              "text": " I should be able to view all historical comments associated with that issue."
            }
          ]
        },
        {
          "type": "rule"
        },
        {
          "type": "heading",
          "attrs": {
            "level": 2
          },
          "content": [
            {
              "type": "text",
              "text": "Technical notes:"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "The comment history should be fetched from Jira using the official REST API and stored securely in the new system's database. The implementation should ensure that comments are linked to their respective Jira issues for easy reference and traceability."
            }
          ]
        }
      ]
    },
